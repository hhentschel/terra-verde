{% extends '_layouts/main' %}

{% block content %}
  <section class="grid">
    <div class="row">
      <div class="col col-xs-12 col-md-12 col-lg-12">
        <h3 class="heading heading--3">
          Password zurücksetzten
        </h3>

        <p class="layout-helper__margin-bottom--xs">
          E-Mail Adresse eingeben für die das Passwort zurückgesetzt werden soll
        </p>

        <form method="post" accept-charset="UTF-8">
          {{ csrfInput() }}
          {{ actionInput('users/send-password-reset-email') }}
          {{ redirectInput('customer/account/reset-password/email/') }}

          <label for="loginName">E-Mail</label>
          {{
            input(
              'text',
              'loginName',
              loginName ?? craft.app.user.rememberedUsername,
              {
                id: 'loginName',
                class: 'input input-medium layout-helper__margin-bottom--xxs'
              }
            )
          }}

          {% if errors ?? false %}
            {{
              ul(
                errors,
                {
                  class: 'errors'
                }
              )
            }}
          {% endif %}

          <button type="submit" class="button button--primary">
            Abschicken
          </button>
        </form>
      </div>
    </div>
  </section>
{% endblock %}
