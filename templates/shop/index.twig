{% extends "_layouts/main" %}


{% block content %}

<div class="full-bleed-header"
style="background-size: 100%; height: 200px; background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url(/images/coffee-shop.jpg); background-repeat: no-repeat, repeat;">
<div class="page-title text-center">
   <h2 class="logo"><span class="scripty">Crafty Supplies</h2>
</div>
</div>
<div class="row">
<div class="intro large-12 small-12 columns ">
   <p>
       <small><a href="/store">&larr;Supplies</a></small>
   </p>
</div>

<ul>

  {% set products = craft.products().type('whitewine').limit(10).all() %}

  {% for product in products %}
    <li>
      <a href="{{ product.url }}">
        <img src="{{ product.productImage.one().getUrl('productListing') }}" alt="">
        {{ product.title}} - {{ product.defaultPrice |currency('CHF') }}
        <h5>{{product.title }}</h5>
        <p>{{ product.defaultPrice |currency('CHF')}}</p>
      </a>
      </li>

  {% endfor %}


</ul>

</div>





{% endblock %}
