{% import '_helpers/macros.twig' as macros %}

{% set homeLink = craft.entries.section('homepage').one() %}
{% set ueberunsLink = craft.entries.section('aboutUsStructure').one() %}
{% set shopLink = craft.entries.section('shopStructure').one() %}
{% set aktuellLink = craft.entries.section('newStructure').one() %}
{% set sucheLink = craft.entries.section('searchSingle').one() %}
{% set verkaufsstellenLink =
  craft.entries.section('sellingPointsStructureSingle').one()
%}
{% set produzentenLink = craft.entries.section('producersStructure').one() %}

{% set url = craft.app.request.pathInfo %}

<nav class="nav-main" role="navigation">
  <h2 class="visually-hidden">
    {{ 'nav.mainNavigation'|t }}
  </h2>
  <ul class="nav-main__list">
    {# <li class="nav-main__list-item">
      <a class="nav__link {% if craft.app.request.segments|last == "" %}active{% endif %}" href="/">{{ "Home"|t }}</a>
    </li> #}

    <li class="nav-main__list-item">
      <a href="{{ shopLink.url }}"
        class="nav__link {{ macros.isActive('shop', 1, 'nav__link--') }}">
        {{ 'Shop'|t }}
      </a>
    </li>

    <li class="nav-main__list-item">
      <a href="{{ ueberunsLink.url }}"
        class="nav__link {{ macros.isActive('ueberuns', 1, 'nav__link--') }}">
        {{ 'Über uns'|t }}
      </a>
    </li>

    <li class="nav-main__list-item">
      <a href="{{ aktuellLink.url }}"
        class="nav__link {{ macros.isActive('aktuell', 1, 'nav__link--') }}">
        {{ 'Aktuell'|t }}
      </a>
    </li>

    <li class="nav-main__list-item">
      <a href="{{ verkaufsstellenLink.url }}"
        class="nav__link {{
        macros.isActive(
          'verkaufsstellen',
          1,
          'nav__link--'
        )
        }}">
        {{ 'Verkaufsstellen'|t }}
      </a>
    </li>

    <li class="nav-main__list-item">
      <a href="{{ produzentenLink.url }}"
        class="nav__link {{
        macros.isActive(
          'produzenten',
          1,
          'nav__link--'
        )
        }}">
        {{ 'Produzenten'|t }}
      </a>
    </li>

    <li class="nav-main__list-item nav-main__list-item-last">
      <a href="{{ sucheLink.url }}"
        class="nav__link {{ macros.isActive('suche', 1, 'nav__link--') }}">
        {{ 'Suche'|t }}
      </a>
    </li>
  </ul>
