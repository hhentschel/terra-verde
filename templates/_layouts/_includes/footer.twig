{% import '_helpers/macros.twig' as macros %}

<!-- Template: {{ _self }}.twig -->
<footer class="footer">

  <h2 class="visually-hidden">
    Footer
  </h2>
  <div class="footer__top">
    <div class="grid">
      <div class="row">

        <div class="col col-xs-12 col-md-3 col-lg-3">
          <h3 class="heading--3 heading--no-margin">Newsletter</h3>
        </div>


        <div class="col col-xs-12 col-md-9 col-lg-9">
          <div class="form__wrapper">
            {% include '_pages/newsletter/index.twig' %}

            {# {% set mailingList = craft.campaign.mailingLists.id(7).one() %}
            #}{# If there were any validation errors, a `contact` variable will be passed to the
   template, which contains the posted values and validation errors. If that’s not
   set, we’ll default to a new contact. #}{#
            {% set contact = contact ?? create('putyourlightson\\campaign\\elements\\ContactElement') %}

            <form id="subscribe-form" method="post" action="">
              {{ csrfInput() }}
              <input type="hidden" name="action" value="campaign/forms/subscribe"/>
              <input type="hidden" name="mailingList" value="{{ mailingList.slug }}"/>
              <input type="hidden" name="redirect" value="{{ 'subscribe-success'|hash }}"/>

              <h3><label for="email">Email</label></h3>
              <input id="email" type="email" name="email" value="{{ contact.email }}" required/>
              {{ contact.getFirstError('email') }}

              <h3><label for="name">First Name</label></h3>
              <input id="name" type="text" name="fields[firstName]" value="{{ contact.firstName }}" required/>
              {{ contact.getFirstError('firstName') }}

              <h3><label for="name">Last Name</label></h3>
              <input id="name" type="text" name="fields[lastName]" value="{{ contact.lastName }}" required/>
              {{ contact.getFirstError('lastName') }}

              <!-- Required if reCAPTCHA is enabled in plugin settings -->
              {{ craft.campaign.recaptcha }}

              <input type="submit" value="Subscribe"/>
            </form> #}

          </div>
        </div>


      </div>
    </div>
  </div>

  <div class="footer__logo">
    <div class="grid">
      <div class="row">
        <div class="col col-xs-12 col-md-12 col-lg-8 col-lg-shift-2">
          <div class="row">
            <div class="col col-xs-12 col-md-12 col-lg-12">
              <div class="footer__logo-container">

                <div class="footer__logo-img">
                  <img class="logo-img"
                       src="{{ alias(
                         '@rootUrl'
                       ) }}/assets/images/logo/EU_Organic_Logo_Colour_rgb.jpg"
                       alt="Bio Eu Logo"/>
                </div>
                <div class="footer__logo-text">

                  <h4 class="heading heading-4 heading--no-margin">Bio dal 1996. Geniessen im Einklang mit der
                    Natur</h4>
                  <p class="text layout-helper__margin-top--none">TERRA VERDE steht für faire, mediterrane Delikatessen
                    und
                    Weine
                    aus rein biologischer Produktion.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="footer__middle">
    <div class="grid">
      <div class="row">
        <div class="col col-xs-12 col-md-6 col-lg-3">
          <div class="footer--contact">
            <h3 class="footer--heading">Kontakt</h3>

            <div class="footer--contact__phone">
              {% if footerGlobal.phone %}
                <span class="contact__phone">
                Tel <a href="tel:{{ footerGlobal.phone }}">{{ footerGlobal.phone }}</a>
              </span>
              {% endif %}

              {% if footerGlobal.fax %}
                <span class="contact__fax">
                Fax
                {{ footerGlobal.fax }}
              </span>
              {% endif %}
            </div>

            <div class="footer--contact__email">
              {% if footerGlobal.emailOne %}
                <span class="emailOne">
                {{ macros.emailLinks(footerGlobal.emailOne, "email") }}
              </span>
              {% endif %}

              {% if footerGlobal.emailTwo %}
                <span class="emailTwo">
                {{ macros.emailLinks(footerGlobal.emailTwo, "email") }}
              </span>
              {% endif %}
            </div>

          </div>
          {% if footerGlobal.adress %}
            <div class="footer--contact__adress">
              {{ footerGlobal.adress }}
            </div>
          {% endif %}


        </div>

        <div class="col col-xs-12 col-md-6 col-lg-3">
          <div class="footer--aboutus">
            <h3 class="footer--heading">Über uns</h3>

            {% set entries = craft.entries.section('aboutusStructure').level(2) %}

            <ul class="footer-list__nav">
              <li class="footer-list__nav-item">
                <a href="/ueberuns">Werte</a>
              </li>
              {% for entry in entries.all() %}
                <li class="footer-list__nav-item">
                  <a href="{{ entry.url }}">
                  {{ entry.title }}</li>
                </a>
              {% endfor %}
            </ul>
          </div>
        </div>


        <div class="col col-xs-12 col-md-6 col-lg-3">
          <div class="footer--info">
            <h3 class="footer--heading">Service</h3>
            {% set entries = craft.entries.section('serviceStructure').all() %}

            <ul class="footer-list__nav">
              {% for entry in entries %}
                <li class="footer-list__nav-item">
                  <a href="{{ entry.url }}">
                  {{ entry.title }}</li>
                </a>
              {% endfor %}
            </ul>
          </div>
        </div>

        <div class="col col-xs-12 col-md-6 col-lg-3">
          <div class="footer--box">
            <div class="footer--openinghours">
              <h3 class="footer--heading">Laden</h3>
              {% if footerGlobal.adress %}
                <div class="footer--contact__adress">
                  {{ footerGlobal.adress }}
                </div>
              {% endif %}
              {% if footerGlobal.openingHoursOne %}
                <span>
                {{ footerGlobal.openingHoursOne }}
              </span>
              {% endif %}
              {% if footerGlobal.openingHoursTwo %}
                <span>
                {{ footerGlobal.openingHoursTwo }}
              </span>
              {% endif %}
              {% if footerGlobal.additionalOpenings %}
                <span>
                {{ footerGlobal.additionalOpenings }}
              </span>
              {% endif %}
            </div>

            <div class="footer--social">
              <ul class="footer--social__list">
                <li class="footer--social__list--item">
                  <a
                    href="https://www.instagram.com/terra.verde.bio/" target="_blank">
                    {{ macros.svg('instagram')|attr({
                      class: 'icon icon--24'
                    }) }}
                  </a>
                </li>
                <li class="footer--social__list--item">
                  <a href="https://www.facebook.com/terraverdebio/?locale=de_DE" target="_blank">
                    {{ macros.svg('facebook')|attr({
                      class: 'icon icon--24'
                    }) }}
                  </a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="footer__bottom">
    <div class="grid">
      <div class="row">
        <div class="col col-xs-12 col-md-6 col-lg-12">
          <ul class="nav__service">
            <li class="nav__service--items">
              <a href="/agb">
                {{ 'nav.footer.slug.agb'|t }}
              </a>
            </li>
            <li class="nav__service--items">
              <a href="/impressum">
                {{ 'nav.footer.slug.imprint'|t }}
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

</footer>

