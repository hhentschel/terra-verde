<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/login') }}

  <label for="loginName">E-Mail</label>
  {{ input(
    'text',
    'loginName',
    craft.app.user.rememberedUsername,
    {
      id: 'loginName',
      class: 'input input-medium layout-helper__margin-bottom--xxs'
    }
  ) }}

  <label for="password">Passwort</label>
  {{ input(
    'password',
    'password',
    null,
    {
      id: 'password',
      class: 'input input-medium layout-helper__margin-bottom--xxs'
    }
  ) }}

  <div class="selection selection--checkbox">
    {{ input(
      'checkbox',
      'rememberMe',
      '1',
      {
        id: 'rememberMe',
        class: 'selection--input selection__input'
      }
    ) }}
    <label for="rememberMe" class="selection__label">
      Angemeldet bleiben
    </label>
  </div>

  {# Outputs a hidden input field #}
  {{ craft.snaptcha.field }}

  <button type="submit"
          class="button button--primary layout-helper__margin-vertical--xxs">
    Login
  </button>

  {% if errorMessage is defined %}
    <p>
      {{ errorMessage }}
    </p>
  {% endif %}
</form>

<p>

  <a href="{{ url('/customer/account/reset-password') }}" class="link link__block">
    Passwort vergessen?
  </a>

  <a href="{{ url('/customer/account/reset-password') }}" class="link link__block">
    Neues Passwort erstellen.
  </a>
</p>
