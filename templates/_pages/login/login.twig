<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/login') }}

  <label for="loginName">E-Mail</label>
  {{
    input(
      'text',
      'loginName',
      craft.app.user.rememberedUsername,
      {
        id: 'loginName',
        class: 'input input-medium layout-helper__margin-bottom--xxs'
      }
    )
  }}

  <label for="password">Passwort</label>
  {{
    input(
      'password',
      'password',
      null,
      {
        id: 'password',
        class: 'input input-medium layout-helper__margin-bottom--xxs'
      }
    )
  }}

  <div class="selection">
    <label class="selection__label">
      {{
        input(
          'checkbox',
          'rememberMe',
          '1',
          {
            class: 'selection--input'
          }
        )
      }}Angemeldet bleiben
    </label>
  </div>

  <button type="submit"
    class="button button--primary layout-helper__margin-vertical--xxs">
    Login
  </button>

  {% if errorMessage is defined %}
    <p>
      {{ errorMessage }}
    </p>
  {% endif %}
</form>

<p>
  <a href="{{ url('/customer/account/reset-password') }}" class="link">
    Passwort vergessen?
  </a>
</p>
