{% extends '_layouts/main' %}
{% set pageTitle = entry.pageTitle is not empty ? entry.pageTitle : entry.title
%}

{% block content %}
  <div class="grid">
    <div class="row">
      <div class="col col-xs-12 col-md-12 col-lg-12">
        {% include '_components/breadcrumb.twig' %}
        <h2 class="heading heading--h2 heading--site heading--no-margin-top">
          {{ pageTitle }}
        </h2>
      </div>
    </div>
  </div>

  <section class="grid">
    <div class="row">
      <div class="col col-xs-12 col-md-12 col-lg-6">
        <h3>
          Hallo {{ currentUser.username }} <br /><br />
          Vielen Dank für Ihre Registrierung!
        </h3>
        <p>
          Wir haben ihnen eine E-Mail für die Aktiveirung ihres Kontos an
          folgenden E-Mail geschickt:
          {{ currentUser.useremail }}
        </p>
      </div>
    </div>
  </section>
{% endblock %}
